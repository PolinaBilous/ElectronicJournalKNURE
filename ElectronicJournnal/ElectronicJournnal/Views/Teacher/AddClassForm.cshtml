@model ElectronicJournnal.Models.ClassWithManagment

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top: 10%; margin-left: 30%; font-family: Calibri, sans-serif; font-size: 23px;">
    @using (Html.BeginForm("AddNewClass", "Teacher", FormMethod.Post, new { @class = "addClassForm" }))
    {
        <h2 style="font-size: 30px; margin-top: 15px; margin-left: 120px;">Добавление класса</h2>
        @Html.HiddenFor(c => c.Class_ID)
        @Html.HiddenFor(c => c.ClassManagment_ID)
        <p>Название класса: @Html.TextBoxFor(c => c.Class_Name, new { @class="inp"})</p>
        <p>
            Классный руководитель:
            <select name="Teacher_ID" class="inputSelectLong">
                @foreach (ElectronicJournnal.Models.TeacherShortInf item in ViewBag.Teachers)
                {
                    <option value="@item.Teacher_ID">@item.Surname @item.Name @item.Patronymic</option>
                }
            </select>
        </p>

        <button name="action" class="sort" style="margin-left: 175px;">Добавить класс</button>
    }
</div>

