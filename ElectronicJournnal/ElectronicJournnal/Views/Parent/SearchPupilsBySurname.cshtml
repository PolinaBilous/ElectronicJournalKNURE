@model IEnumerable<ElectronicJournnal.Models.PupilWithClass>

<div id="information" style="float:left; padding-left: 300px; padding-top: 20px;">
    <table class="bordered">
        <thead>
            <tr>
                <th>ФИО</th>
                <th>Класс</th>
                <th colspan="3">Действия</th>
            </tr>
        </thead>
        <tbody>
            @using (Html.BeginForm("ViewPupils", "Parent", FormMethod.Post))
            {
                foreach (ElectronicJournnal.Models.PupilWithClass item in ViewBag.Pupils)
                {
                    if (!(ViewBag.Pupil.Pupil_ID == item.Pupil_ID))
                    {
                        <tr>
                            <td>@item.Surname @item.Name @item.Patronymic</td>
                            <td>@item.Class</td>
                            <td>
                                @using (Html.BeginForm("ViewPupils", "Teacher", FormMethod.Post))
                                {
                                    <button name="action" value="@item.Pupil_ID" class="img" style="display: inline-block;"><img src="~/Images/info.png" width="30" height="30" /></button>
                                }
                            </td>
                            <td>
                                @using (Html.BeginForm("ViewPupils", "Teacher", FormMethod.Post))
                                {
                                    <button name="marks" value="@item.Pupil_ID" class="img" style="display: inline-block;"><img src="~/Images/marks.png" width="30" height="30" /></button>
                                }
                            </td>
                        </tr>
                    }
                    else
                    {
                        <tr style="background-color: rgba(55, 58, 170, 0.26)">
                            <td>@item.Surname @item.Name @item.Patronymic</td>
                            <td>@item.Class</td>
                            <td>
                                @using (Html.BeginForm("ViewPupils", "Teacher", FormMethod.Post))
                                {
                                    <button name="action" value="@item.Pupil_ID" class="img" style="display: inline-block;"><img src="~/Images/info.png" width="30" height="30" /></button>
                                }
                            </td>
                            <td>
                                @using (Html.BeginForm("ViewPupils", "Teacher", FormMethod.Post))
                                {
                                    <button name="marks" value="@item.Pupil_ID" class="img" style="display: inline-block;"><img src="~/Images/marks.png" width="30" height="30" /></button>
                                }
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>

