@model IEnumerable<ElectronicJournnal.Models.PupilWithAvgMark>

<div id="information" style="margin-left: 24%; margin-top: 3%;">
    @if (Model.Count() == 0)
    {
        @: В этом классе еще ни один ученик не получил ни одной оценки.
    }
    else
    {
        <table class="bordered">
            <thead>
                <tr>
                    <th>Номер</th>
                    <th>ФИО</th>
                    <th>Средний балл</th>
                </tr>
            </thead>
            <tbody>
                    @{
                        int i = 1;
                    }
                    @foreach (ElectronicJournnal.Models.PupilWithAvgMark p in Model)
                    {
                        <tr>
                            <td>@(i++)</td>
                            <td>@p.Surname @p.Name @p.Patronymic</td>
                            <td>@p.AvgMark.ToString()</td>
                        </tr>
                    }
            </tbody>
        </table>
        using (Html.BeginForm("GetRating", "Teacher", FormMethod.Post))
        {
            @Html.Hidden("classID", ViewData["ClassID"])
            <button name="action" class="sort" style="margin-left: 27%; margin-top: 2%; background-color: lightgreen;" value=1>Получить отчет</button>
        }
}
</div>
