@model ElectronicJournnal.Models.PupilFullInformation

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_LayoutParent.cshtml";
}

<div style="margin-top: 6%; margin-left: 30%; font-family: Calibri, sans-serif; font-size: 23px; ">
    <div class="addForm">
        <p><b>Имя:</b> @Model.Name</p>
        <p><b>Фамилия:</b> @Model.Surname</p>
        <p><b>Отчество:</b> @Model.Patronymic</p>
        <p><b>Класс:</b> @Model.Class</p>
        <p><b>Дата рождения:</b> @Model.Date_Of_Birth.Date.ToLongDateString()</p>
        <p><b>Возраст:</b> @Model.Age лет</p>
        <p><b>Телефон одного из родителей:</b> @Model.Parent_Phone_Number</p>
        <p><b>Телефон ученика:</b> @Model.Pupil_Phone_Number</p>
        <p><b>Адресс:</b> @Model.Address</p>

        <div style="display: inline-block; margin-left: 100px;">
            @using (Html.BeginForm("GetPupilReport", "Parent", FormMethod.Post))
            {
                <p><button name="action" value="@Model.Pupil_ID" class="img" style="display: inline; margin-left: 100px;"><img src="~/Images/word.png" width="60" height="60" /></button></p>
            }
        </div>
    </div>
</div>
