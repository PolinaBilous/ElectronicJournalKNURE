@model ElectronicJournnal.Models.TeacherFullInformation

@{
    Layout = "~/Views/Shared/_LayoutParent.cshtml";
}

<div style="margin-top: 9%; margin-left: 30%; font-family: Calibri, sans-serif; font-size: 23px;">
    <div class="addForm">
        <p><b>Имя:</b> @Model.Name</p>
        <p><b>Фамилия:</b> @Model.Surname</p>
        <p><b>Отчество:</b> @Model.Patronymic</p>
        <p><b>Дата рождения:</b> @Model.Date_Of_Birth.Date.ToLongDateString()</p>
        <p><b>Возраст:</b> @Model.Age лет</p>
        <p><b>Стаж работы:</b> @Model.Experience лет</p>
        <p><b>Номер телефона:</b> @Model.Phone_Number</p>
        <p><b>Адресс:</b> @Model.Address</p>
        <p><b>Электронная почта:</b> @Model.Email</p>
    </div>
</div>